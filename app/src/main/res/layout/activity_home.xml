<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="work.demo.com.rummyscore.Activity.HomeActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="Match Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/match_name_edittext"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/match_name_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Card Value"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginEnd="8dp"
        android:text="@string/indianCurrencySign"
        app:layout_constraintRight_toLeftOf="@+id/card_value_edittext"
        app:layout_constraintBottom_toBottomOf="@+id/card_value_edittext"
        app:layout_constraintTop_toTopOf="@+id/card_value_edittext"/>

    <EditText
        android:id="@+id/card_value_edittext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:digits="1234567890"
        android:gravity="center"
        android:imeOptions="actionNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/match_name_edittext"
        app:layout_constraintTop_toBottomOf="@+id/match_name_edittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:text="Number of Players"
        android:textSize="16sp"
        android:id="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />



    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:inputType="number"
        android:digits="1234567890"
        android:imeOptions="actionNext"
        android:id="@+id/number_of_employees_edittext"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/card_value_edittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:text="Pack Value"
        android:textSize="16sp"
        android:id="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginEnd="8dp"
        android:text="@string/indianCurrencySign"
        app:layout_constraintRight_toLeftOf="@+id/pack_value_edittext"
        app:layout_constraintBottom_toBottomOf="@+id/pack_value_edittext"
        app:layout_constraintTop_toTopOf="@+id/pack_value_edittext"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:inputType="number"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:id="@+id/pack_value_edittext"
        app:layout_constraintEnd_toEndOf="@+id/number_of_employees_edittext"
        app:layout_constraintStart_toStartOf="@+id/number_of_employees_edittext"
        app:layout_constraintTop_toBottomOf="@+id/number_of_employees_edittext"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Enter"
        android:id="@+id/button_enter"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/pack_value_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
